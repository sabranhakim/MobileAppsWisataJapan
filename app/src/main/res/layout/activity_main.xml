<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="25dp"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:text="Take your time and discover various sights in"
            android:textAlignment="gravity"
            android:textSize="45sp" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/bree_serif"
            android:text="Japan"
            android:textStyle="italic"
            android:textColor="#4379F2"
            android:textSize="45sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Destinations"
            android:textSize="30dp"
            android:fontFamily="@font/bree_serif"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/destinasi1"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/destinasi2"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/destinasi3"
                android:layout_marginRight="5dp"/>

            <ImageView
                android:id="@+id/imageView4"
                android:layout_width="140dp"
                android:layout_height="70dp"
                android:layout_weight="1"
                android:src="@drawable/destinasi4" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="25dp"
                    android:text="Osaka"
                    android:fontFamily="@font/bree_serif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="30dp"
                    android:text="Asakusa"
                    android:fontFamily="@font/bree_serif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="31dp"
                    android:text="Honshu"
                    android:fontFamily="@font/bree_serif"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="30dp"
                    android:text="Hakone"
                    android:fontFamily="@font/bree_serif"/>
            </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:paddingTop="20dp"
                    android:orientation="vertical">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_wisata"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent" />

                </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>